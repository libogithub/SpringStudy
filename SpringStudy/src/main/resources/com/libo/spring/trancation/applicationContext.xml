<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- h2数据源 -->
	<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://192.168.1.7:3306/libo?useUnicode=true&amp;characterEncoding=UTF-8" />
		<property name="username" value="libo" />
		<property name="password" value="lb123456789" />
	</bean>
	
	<!-- dao配置 -->
	<bean id="accountDao" class="com.libo.spring.trancation.programing.dao.AccountDaoImp">
		<property name="dataSource" ref="dataSource"/>
	</bean>
	
	<!-- service配置 -->
	<bean id="accountService" class="com.libo.spring.trancation.programing.service.AccountService">
		<property name="accountDao" ref="accountDao"/>
		<property name="txManager"  ref="txManager"/>
	</bean>
	
	<!-- 事务管理器 -->
	<bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>
</beans>